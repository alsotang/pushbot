{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": ["node_modules/", "dist/"]
}
